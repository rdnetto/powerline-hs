name:                powerline-hs
version:             0.1.0.1
synopsis:            Powerline-compatible shell prompt generator.
description:         Please see README.md
homepage:            https://github.com/rdnetto/powerline-hs
license:             Apache
license-file:        LICENSE
author:              Reuben D'Netto
maintainer:          rdnetto@gmail.com
copyright:           Reuben D'Netto 2016
category:            Shell
build-type:          Simple
cabal-version:       >=1.10

executable powerline-hs
  default-language:    Haskell2010
  ghc-options:         -O2 -Wall -ddump-splices

  default-extensions:  RecordWildCards,
                       ScopedTypeVariables

  hs-source-dirs:      src
  main-is:             Main.hs
  other-modules:       Aeson.Merge,
                       Aeson.Unpack,
                       CommandArgs,
                       Config.File,
                       Config.Schema,
                       Config.PowerlineResources,
                       Format,
                       Rendering,
                       Segments,
                       Segments.Base,
                       Segments.Common.Batt,
                       Segments.Common.Env,
                       Segments.Common.Net,
                       Segments.Common.Sys,
                       Segments.Common.Time,
                       Segments.Shell,
                       Segments.VCS,
                       Util

  build-depends:       base >= 4.7 && < 5,
                       aeson,
                       basic-prelude,
                       bytestring,
                       containers,
                       directory,
                       download,
                       filepath,
                       file-embed,
                       git-embed,
                       glob-posix,
                       network,
                       network-bsd,
                       network-info,
                       optparse-applicative,
                       process,
                       rainbow,
                       safe,
                       scientific,
                       strict,
                       text,
                       time,
                       template-haskell,
                       transformers,
                       unordered-containers,
                       unix,
                       vector,
                       xdg-basedir

benchmark powerline-hs-bench
  type:                exitcode-stdio-1.0
  hs-source-dirs:      bench
  main-is:             Bench.hs
  build-depends:       base >= 4.7 && < 5,
                       criterion,
                       MissingH,
                       process
  default-language:    Haskell2010
  ghc-options:         -O2 -Wall

test-suite powerline-hs-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base,
                       basic-prelude,
                       process,
                       tasty,
                       tasty-hunit
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010
  default-extensions:  NoImplicitPrelude

source-repository head
  type:     git
  location: https://github.com/rdnetto/powerline-hs

